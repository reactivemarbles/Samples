<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:comparison="clr-namespace:Comparison;assembly=Comparison"
             x:Class="Comparison.MainPage">

    <StackLayout Margin="0,40,0, 0">
        <Picker x:Name="TypePicker">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Imperative</x:String>
                    <x:String>Declarative</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <comparison:ThreadSafeView x:Name="ThreadSafeView">
            
        </comparison:ThreadSafeView>
    </StackLayout>
</ContentPage>
