<?xml version="1.0" encoding="utf-8"?>

<xamForms:ReactiveContentView x:TypeArguments="common:IThreadSafeViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:xamForms="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                              xmlns:declarative="clr-namespace:Declarative;assembly=Comparison.Common"
                              xmlns:common="clr-namespace:Comparison.Common;assembly=Comparison.Common"
                              x:Class="Comparison.ThreadSafeView"
                              x:DataType="common:IThreadSafeViewModel">
    <ContentView.Content>
        <StackLayout>
            <Entry Text="{Binding FirstName}" />
            <Entry Text="{Binding LastName}"/>
            <Label Text="{Binding FullName}"/>
        </StackLayout>
    </ContentView.Content>
</xamForms:ReactiveContentView>